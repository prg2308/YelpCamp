<% layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <h1>Reset Password</h1>
            <form action="/reset/<%=token%>" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control"
                        pattern="^(?=.*[0-9])(?=.*[a-zA-Z])(?=\S+$).{8,}$" required>
                    <div id="passwordHelp" class="form-text pb-2">Minimum 8 characters with atleast One Digit and One
                        Character</div>
                    <div class="invalid-feedback password-feedback">
                        Required
                    </div>
                </div>
                <div class="mb-3">
                    <label for="confPassword" class="form-label">Confirm Password</label>
                    <input type="password" name="confPassword" id="confPassword" class="form-control"
                        pattern="^(?=.*[0-9])(?=.*[a-zA-Z])(?=\S+$).{8,}$" required>
                    <div class="invalid-feedback conf-feedback">
                        Required
                    </div>
                </div>
                <div class="mb-3">
                    <input type="checkbox" id="showPassword">
                    <label for="showPassword">Show Password</label>
                </div>
                <button class="btn btn-success">Update</button>
            </form>
        </div>
    </div>
    <style>
        .bg-trans {
            --bs-bg-opacity: 1;
            background-color: rgba(var(--bs-dark-rgb), var(--bs-bg-opacity)) !important;
        }

        .invisible {
            display: none;
        }
    </style>

    <script>
        const button = document.querySelector('.btn')
        const password = document.querySelector('#password')
        const confPassword = document.querySelector('#confPassword')
        const confFeedback = document.querySelector('.conf-feedback')
        const passwordFeedback = document.querySelector('.password-feedback')
        const showPassword = document.querySelector("#showPassword")
        const passwordHelp = document.querySelector('#passwordHelp')

        button.addEventListener('click', function () {

            if (!password.checkValidity() && password.value) {

                passwordHelp.classList.add('invisible')

                if (password.value.length < 8) {
                    passwordFeedback.innerText = 'Must be atleast 8 charcters'
                } else {
                    passwordFeedback.innerText = 'Must have atleast One digit and One character'
                }
            }
            if (!confPassword.checkValidity() && confPassword.value) {
                confFeedback.innerText = ''
            }

        })

        showPassword.addEventListener('change', function () {
            if (this.checked) {
                password.type = 'text'
                confPassword.type = 'text'
            } else {
                password.type = 'password'
                confPassword.type = 'password'
            }
        })
    </script>