<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script defer src="/js/validateForms.js"></script>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.5.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.5.0/mapbox-gl.css' rel='stylesheet' />
    <script defer src="/js/all.js"></script>
    <title>YelpCamp</title>
</head>

<body>
    <%- include('../partials/navbar.ejs') %>
        <div id="map" style="width: 100%;height: 500px" class="cluster-map"></div>
        <div class="search-sort-container">
            <div class="container">
                <div class="row search-sort-bar">
                    <div class="col-6 dropdown sort-group">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Sort By
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </div>
                    <div class="col-6 search-col">
                        <form class="input-group search-group">
                            <span class="input-group-text search-span" id="basic-addon1"><button
                                    class="btn btn-search"><i class="fas fa-search"></i></button></span>
                            <input type="text" class="form-control search-bar" placeholder="Search Campgrounds..."
                                aria-describedby="basic-addon1" name="search">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <main class="container my-5">
            <%- include('../partials/flash.ejs') %>
                <h1>All Campgrounds</h1>
                <div class="row camps-row">
                    <% for(let campground of campgrounds){ %>
                        <div class="col-lg-4 camp-col">
                            <div class="card camp-card">
                                <img src="<%= campground.images[0].url %>" class="card-img-top camp-img"
                                    alt="<%= campground.title %>">
                                <div class="card-body camp-card-body">
                                    <div class="row camp-info">
                                        <div class="col-9">
                                            <a href="/campgrounds/<%= campground._id %>" class="camp-title-anchor">
                                                <h5 class="card-title camp-card-title">
                                                    <%= campground.title.charAt(0).toUpperCase() +
                                                        campground.title.slice(1); %>
                                                </h5>
                                            </a>
                                        </div>
                                        <div class="col-3 camp-price">
                                            <h5 class="camp-price-h5">
                                                <% if(campground.price<1000){ %>
                                                    $
                                                    <% }else if(campground.price>750 && campground.price<2000){ %>
                                                            $$
                                                            <% }else{ %>
                                                                $$$
                                                                <% } %>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row camp-rating-row">
                                        <div class="col-12 camp-rating text-secondary">
                                            <% let avg=0 %>
                                                <% for(review of campground.reviews){ %>
                                                    <% if(review){ %>
                                                        <% avg+=parseInt(review.rating)%>
                                                            <% } %>
                                                                <% } %>
                                                                    <% if(campground.reviews.length){ %>
                                                                        <span class="rating-span">
                                                                            <% for(let star=0;star
                                                                                <Math.floor(avg/campground.reviews.length)
                                                                                ;star++){ %>
                                                                                &#9733;
                                                                                <% } %>
                                                                                    <%for(let
                                                                                        star=Math.floor(avg/campground.reviews.length)
                                                                                        ;star<5;star++){ %>
                                                                                        &#9734;
                                                                                        <% } %>
                                                                        </span>
                                                                        <span class="no-rating">
                                                                            <%= campground.reviews.length %>
                                                                                <% if(campground.reviews.length===1){ %>
                                                                                    review
                                                                                    <% }else{ %>
                                                                                        reviews
                                                                                        <% } %>
                                                                        </span>
                                                                        <% }else{ %>
                                                                            <span class="card-subtitle text-muted">(No
                                                                                reviews yet)</span>
                                                                            <% } %>
                                        </div>
                                    </div>
                                    <p class="card-text camp-card-text">
                                        <% if(campground.description.length>80){ %>
                                            <%= campground.description.slice(0,80) + '...' %>
                                                <% }else{ %>
                                                    <%= campground.description %>
                                                        <%for(let i=campground.description.length;i<80;i++){%>
                                                            &nbsp;
                                                            <%}%>
                                                                <% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
        </main>
        <script>
            const campgrounds = { features:<%- JSON.stringify(campgrounds) %>}
        </script>
        <script src="/js/clusterMap.js"></script>
        <%- include('../partials/footer.ejs') %>
</body>

<style>
    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        background-color: #f5f5f5;
    }

    .sticky-top {
        position: fixed;
        top: 0;
        right: 0;
        left: 0;
        z-index: 1030;
    }

    .row {
        background-color: white;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    .camps-row {
        background-color: #f5f5f5;
    }

    .search-sort-container {
        background-color: white;
        box-shadow: 0 4px 8px 0 rgb(0 0 0 / 7%);
    }

    .search-sort-bar {
        justify-content: space-between;
    }

    .sort-group {
        width: 40%;
    }

    .search-group {
        margin-bottom: 0;
    }

    .btn-search {
        padding: 0;
    }

    .camp-card {
        margin: 1rem;
        border: none;
        box-shadow: 0 4px 8px 0 rgb(0 0 0 / 10%), 0 6px 20px 0 rgb(0 0 0 / 9%);
    }

    .camp-info {
        padding-bottom: 0;
    }

    .camp-price {
        padding-left: 1.25rem;
        padding-right: 0;
    }

    .camp-price-h5 {
        margin-bottom: 0;
    }

    .camp-card-title {
        margin-bottom: 0;
    }

    .camp-title-anchor {
        text-decoration: none;
    }

    .no-rating {
        padding-left: 1rem;
    }

    .bg-dark {
        transition: all 0.25s;
    }

    .bg-trans {
        background-color: transparent;
        transition: all 0.25s;
    }

    @media (min-width:992px) {
        .search-col {
            padding-left: 20rem;
        }
    }

    @media (min-width:768px) and (max-width: 991px) {
        .search-col {
            padding-left: 7rem;
        }
    }

    @media (max-width:768px) {
        .search-col {
            padding-left: 4rem;
        }
    }
</style>

<script>
    const navbar = document.querySelector('.navbar');
    window.onscroll = () => {
        if (window.scrollY > 100) {
            navbar.classList.add('bg-dark');
            navbar.classList.remove('bg-trans');
        } else {
            navbar.classList.add('bg-trans');
            navbar.classList.remove('bg-dark');
        }
    };
</script>

</html>