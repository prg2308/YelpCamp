<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script defer src="/js/bootstrap.min.js"></script>
    <script defer src="/js/validateForms.js"></script>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.5.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.5.0/mapbox-gl.css' rel='stylesheet' />
    <script defer src="/js/all.js"></script>
    <title>YelpCamp</title>
</head>

<body>
    <%- include('../partials/navbar.ejs') %>
        <div id="map" style="width: 100%;height: 500px" class="cluster-map"></div>
        <div class="row">
            <div class="col-6 sort-group">
                sort by
            </div>
            <div class="col-6">
                <form class="input-group search-group">
                    <span class="input-group-text search-span" id="basic-addon1"><button class="btn"><i
                                class="fas fa-search"></i></button></span>
                    <input type="text" class="form-control search-bar" placeholder="Search Campgrounds..."
                        aria-describedby="basic-addon1" name="search">
                </form>
            </div>
        </div>
        <main class="container my-5">
            <%- include('../partials/flash.ejs') %>
                <h1>All Campgrounds</h1>
                <ul style="padding-left: 0;">
                    <% for(let campground of campgrounds){ %>
                        <div class="card mb-3">
                            <div class="row">
                                <div class="col-md-4">
                                    <img class="img-fluid" src="<%= campground.images[0].url %>"
                                        alt="<%= campground.title %>">
                                </div>
                                <div class="col-md-8 text-truncate">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= campground.title.charAt(0).toUpperCase() + campground.title.slice(1); %>
                                        </h5>
                                        <p class="card-text">
                                            <%= campground.description %>
                                        </p>
                                        <p>
                                            <small class="text-muted">
                                                <%= campground.location %>
                                            </small>
                                        </p>
                                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View
                                            more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </ul>
        </main>
        <script>
            const campgrounds = { features:<%- JSON.stringify(campgrounds) %>}
        </script>
        <script src="/js/clusterMap.js"></script>
        <%- include('../partials/footer.ejs') %>
</body>

<style>
    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        background-color: #f5f5f5;
    }

    .row {
        background-color: white;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    .search-group,
    .sort-group {
        margin-left: auto;
        margin-right: auto;
        width: 40%;
    }
</style>

</html>