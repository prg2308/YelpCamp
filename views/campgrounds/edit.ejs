<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="<%= campground.title%>">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="location" class="form-control"
                        value="<%= campground.location%>">
                </div>
                <div class="input-group mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="number" class="form-control" name="price" id="price" placeholder="00.0" min="0"
                            step="0.01" value="<%= campground.price%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" id="image" name="image" class="form-control" value="<%= campground.image%>">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description"
                        class="form-control"><%= campground.description%></textarea>
                </div>
                <button type="submit" class="btn btn-info mb-3">Save</button>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-dark mb-3">Back</a>
            </form>
        </div>
    </div>